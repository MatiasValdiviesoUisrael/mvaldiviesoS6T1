<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mvaldiviesoS6T1.Views.vActualizar"
             Title="vActualizar">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txtCodigo" IsEnabled="False"/>
        <Entry x:Name="txtNombre" Placeholder="Ingrese nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Ingrese apellido"/>
        <Entry x:Name="txtEdad" Placeholder="Ingrese Edad"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnActualizar" Text="Actualizar" clicked="btnActualizar_clicked" Grid.Column="0"/>
            <Button x:Name="btnEliminar" Text="Eliminar" clicked="btnEliminarr_clicked" Grid.Column="1"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>